<center><h1>Listado de productos</h1></center>

<%= search_form_for @search, url: search_productos_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %>
  <div class="actions"><%= f.submit "Search" %></div>
  
  <div class="field">
  Sort:
  <%= f.sort_fields do |s| %>
    <%= s.sort_select %>
  <% end %>
</div>
<% end %>



<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= sort_link(@search, :nombre, "Nombre producto") %></th>
      <th><%= sort_link(@search, :cantidad, "Cantidad") %></th>
      <th><%= sort_link(@search, :descripcion, "Descripcion") %></th>
      <th><%= sort_link(@search, :precio, "Precio") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.cantidad%></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.precio %></td>
        <td><%= link_to 'Mostrar', producto, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Producto', new_producto_path, class: "btn btn-info" %>
